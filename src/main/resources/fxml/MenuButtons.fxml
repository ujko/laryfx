<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>

<HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lary.controllers.MenuButtonsController">
   <children>
      <ToggleButton mnemonicParsing="false" onAction="#connectionProperties" prefHeight="40.0" prefWidth="200.0" selected="true" text="%buttons.conProps">
         <HBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </HBox.margin>
         <toggleGroup>
            <ToggleGroup fx:id="menuButtonsGroup" />
         </toggleGroup>
      </ToggleButton>
      <ToggleButton mnemonicParsing="false" onAction="#logPreview" prefHeight="40.0" prefWidth="200.0" text="%buttons.logPrev" toggleGroup="$menuButtonsGroup">
         <HBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </HBox.margin>
      </ToggleButton>
   </children>
</HBox>
